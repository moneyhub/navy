---
  parser: "babel-eslint"

  extends: "standard"

  plugins: ["flow-vars"]

  rules:
    space-before-function-paren: [2, {"anonymous": "always", "named": "never"}]
    comma-dangle: [2, "always-multiline"]
    no-var: 2
    prefer-const: 2
    padded-blocks: 0
    arrow-parens: 0
    no-multiple-empty-lines: 0

    flow-vars/define-flow-type: 2
    flow-vars/use-flow-type: 2
